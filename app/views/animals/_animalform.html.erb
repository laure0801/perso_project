<div class="container">
<%= simple_form_for [@refuge, @animal] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :age %>
    <%= f.input :species, collection: Animal::SPECIE %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit , class: "orange-btn" %>
  </div>
<% end %>
</div>
